# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=9000
NAME=audit-service
VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection settings (using standard PostgreSQL env var names)
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_DB=audit_service_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
# Application-specific database settings
DB_SSL=false
DB_POOL_MIN=5
DB_POOL_MAX=20

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Direct message broker connection settings for consumer
MESSAGE_BROKER_TYPE=rabbitmq
MESSAGE_BROKER_URL=amqp://admin:admin123@localhost:5672/
MESSAGE_BROKER_QUEUE=audit-service.queue

# Alternative broker configurations (uncomment to use)
# Kafka configuration
# MESSAGE_BROKER_TYPE=kafka
# KAFKA_BROKERS=localhost:9092
# KAFKA_TOPIC=xshopai.events
# KAFKA_GROUP_ID=audit-service

# Azure Service Bus configuration
# MESSAGE_BROKER_TYPE=azure-service-bus
# AZURE_SERVICE_BUS_CONNECTION_STRING=your-connection-string
# AZURE_SERVICE_BUS_TOPIC=xshopai-events
# AZURE_SERVICE_BUS_SUBSCRIPTION=audit-service

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/audit-service.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# OpenTelemetry tracing configuration
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Request correlation tracking
CORRELATION_ID_HEADER=x-correlation-id
